            <br><center>
            <h1>Login</h1></center><br>
            <form method="POST" action="/loginsubmit">
            <img width="24" height="24" id="mail" src="https://img.icons8.com/material-rounded/24/743906/new-post.png" alt="new-post"/><input class="input" type="email" name="Email" id="id1" placeholder="Email"><br><br>
            <img width="25" height="25" id="mail" src="https://img.icons8.com/ios-glyphs/30/743906/lock--v1.png" alt="lock--v1"/><input type="password" name = "pswd" class="input" id="myInput" placeholder="Password"><br>
            <p id="signuptext"><input type="checkbox" onclick="myFunction()">Show Password</p>
            <button>Login</button><br>
            </form>
            <center><p id="signuptext">Don't have an account? <a href="/signup">Signup</a></p></center>
        </div>
        </div>
      <p id="msg"><%=msg%></p>
      <script>
        function myFunction() {
          var x = document.getElementById("myInput");
          if (x.type === "password") {
              x.type = "text";
          } else {
              x.type = "password";
          }
        }
      </script>
